# FurLink 后端API服务环境变量配置 - Zion平台版本
# 宠物紧急寻回平台后端服务 - 生产环境配置

# 基础配置
NODE_ENV=production
PORT=8080
NODE_OPTIONS=--max-old-space-size=400 --max-semi-space-size=64 --optimize-for-size
NODE_ENABLE_SOURCE_MAPS=false
NODE_DISABLE_COLORS=1

# 跨域配置
ALLOWED_ORIGINS=https://furlink-frontend.zeabur.app,http://localhost:8080

# Zion平台配置
ZION_PROJECT_ID=KrABb5Mb0qw
ZION_DATABASE_ID=mgm6x7a6
ZION_API_BASE_URL=https://api.zion.com
ZION_API_KEY=mgm6x7a6

# 安全配置
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# 数据库配置 (如果需要)
# MONGODB_URL=mongodb://localhost:27017/furlink
# REDIS_URL=redis://localhost:6379

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# 性能配置
MEMORY_THRESHOLD=400
GC_INTERVAL=30000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# 监控配置
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_REPORT_INTERVAL=3600000

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_CREDENTIALS=true
HELMET_CSP_ENABLED=true

# 开发配置 (仅开发环境使用)
# DEBUG=furlink:*
# VERBOSE=true
# HOT_RELOAD=true
