<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="header">
    <text class="user-avatar">👤</text>
    <text class="user-name">宠物家长</text>
    <text class="user-motto">爱宠如家人</text>
  </view>
  
  <view class="stats">
    <view class="stat-item">
      <text class="stat-number">{{stats.totalPets || 0}}</text>
      <text class="stat-label">我的宠物</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.helpProvided || 0}}</text>
      <text class="stat-label">帮助次数</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.trustScore || 50}}</text>
      <text class="stat-label">信任度</text>
    </view>
  </view>
  
  <view class="menu-list">
    <view class="menu-item" bindtap="editProfile">
      <text class="menu-icon">✏️</text>
      <text class="menu-text">编辑资料</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="myPets">
      <text class="menu-icon">🐾</text>
      <text class="menu-text">我的宠物</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="myAlerts">
      <text class="menu-icon">🚨</text>
      <text class="menu-text">我的警报</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="settings">
      <text class="menu-icon">⚙️</text>
      <text class="menu-text">设置</text>
      <text class="menu-arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="about">
      <text class="menu-icon">ℹ️</text>
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>
</view>