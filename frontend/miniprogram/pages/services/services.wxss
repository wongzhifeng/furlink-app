/* pages/services/services.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff8c42, #ff6b35);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.service-types {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.type-item {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.type-icon {
  font-size: 40rpx;
  display: block;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 24rpx;
  color: #333;
}

.service-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.service-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.service-item:last-child {
  border-bottom: none;
}

.service-icon {
  font-size: 50rpx;
  margin-right: 30rpx;
  width: 60rpx;
  text-align: center;
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-type {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.service-address {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 3rpx;
}

.service-distance {
  font-size: 20rpx;
  color: #ff8c42;
}

.service-rating {
  text-align: right;
}

.rating-text {
  font-size: 24rpx;
  color: #ff8c42;
  display: block;
  margin-bottom: 3rpx;
}

.rating-count {
  font-size: 20rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
}